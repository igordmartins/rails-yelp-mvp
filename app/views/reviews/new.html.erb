<h1>Send a review to <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating %>
  <%= f.input :content %>
  <%= f.submit "Add review", class: "btn btn-primary" %>
<% end %>

<%= link_to "↩️ Back", restaurant_path(@restaurant), class: 'btn btn-danger' %>
